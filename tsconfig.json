{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",

    "strict": true,
    "strictFunctionTypes": true,
    "noImplicitOverride": true,
    "esModuleInterop": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "lib": ["ES2021"]
  },
  "include": ["src/"]
}
